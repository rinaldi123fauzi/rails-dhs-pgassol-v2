<div class="page-header">
  <%= link_to new_product_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Product
  <% end %>
  <h1>Listing products</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Product name</th>
      <th>Disipline</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @products) do |product| %>
      <td><%= product.product_name %></td>
      <td><%= product.name %></td>
      <td><%= link_to 'Show', product_path(product.product_id) %></td>
      <td><%= link_to 'Edit', edit_product_path(product.product_id) %></td>
      <td><%= link_to 'Destroy', product_path(product.product_id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <% end %>
    </tbody>
  </table>
</div>
