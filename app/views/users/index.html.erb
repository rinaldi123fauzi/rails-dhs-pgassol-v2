    </header>

    <!-- widget div-->
    <div>

      <!-- widget edit box -->
      <div class="jarviswidget-editbox">
        <!-- This area used as dropdown edit box -->

      </div>
      <div class="table-responsive">
        <table id="UserIndex" class="table table-striped table-bordered table-hover" width="100%" data-source="<%= users_url(format: "json") %>">
          <thead>
          <tr>
            <th class="text-center" style="width: 50px">No</th>
            <th>Nama</th>
            <th>Username</th>
