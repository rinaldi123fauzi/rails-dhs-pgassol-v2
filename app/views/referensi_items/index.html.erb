<div class="page-header">
  <%= link_to new_referensi_item_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Referensi item
  <% end %>
  <h1>Listing referensi_items</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <%= content_tag_for(:tr, @referensi_items) do |referensi_item| %>
      <td><%= referensi_item.name %></td>
      <td><%= link_to '', referensi_item, class: 'fa fa-eye btn btn-sm btn-success', title: "Show" %></td>
      <td><%= link_to '', edit_referensi_item_path(referensi_item), class: 'fa fa-pencil btn btn-sm btn-warning', title: "Edit" %></td>
      <td><%= link_to '', referensi_item, method: :delete, data: {confirm: 'Are you sure?'}, class: 'fa fa-trash btn btn-sm btn-danger', title: "Delete"  %></td>
    <% end %>
    </tbody>
  </table>
</div>
